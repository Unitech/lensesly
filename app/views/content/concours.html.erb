	<br/>
	<%= f.text_field :f_name %>
	<br/>
	<%= f.label :l_name,  "Nom" %>
	<br/>
	<%= f.text_field :l_name %>
	<br/>
	<%= f.label :mail,  "Email" %>
	<br/>
	<%= f.text_field :mail %>
	<br/>
	<%= f.label :number,  "Numéro de téléphone" %>
	<br/>
	<%= f.text_field :number %>
	<br/>
	<%= f.label :photo,  "Votre photo" %>
	<br/>      <br/>
	<center>
	  <%= f.file_field :photo %>
	</center>
	<br/><br/>
	<%= f.submit "Envoyer" %>
    <% end %>
</p>
<% else %>
  Merci votre inscription est validée !
  <% end %>

  </div>

