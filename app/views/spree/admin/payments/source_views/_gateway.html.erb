<fieldset data-hook="creditcard">
  <legend><%= t(:creditcard) %></legend>

  <table class="index">
    <tr>
      <th colspan="6"><%= t(:card_details) %></th>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:card_number) %>:</td>
      <td>
        <%= payment.source.display_number %>
      </td>
      <td><%= label_tag nil, t(:expiration) %>:</td>
      <td>
        <%= payment.source.month %>/<%= payment.source.year %>
      </td>
      <td><%= label_tag nil, t(:card_code) %>:</td>
      <td>
        <%= payment.source.verification_value %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:maestro_or_solo_cards) %>:</td>
      <td>
        <%= payment.source.issue_number %>
      </td>
      <td><%= label_tag nil, t(:start_date) %>:</td>
      <td colspan="3">
        <%= payment.source.start_month %>/<%= payment.source.start_year %>
      </td>
    </tr>
  </table>
</fieldset>

